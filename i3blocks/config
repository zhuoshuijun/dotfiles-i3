# Global properties
separator=true
separator_block_width=15

# Show IP
[ip]
command=~/.config/i3blocks/scripts/iface
markup=pango
interval=once

# Show the state of CPUs
[cpu_usage]
command=~/.config/i3blocks/scripts/cpu_usage
markup=pango
interval=5

# Show the state of Memory
[memory]
command=~/.config/i3blocks/scripts/memory
markup=pango
interval=5

# Show the state of disk
[disk]
command=~/.config/i3blocks/scripts/disk
interval=600
markup=pango

# Show the battery status
[battery]
command=~/.config/i3blocks/scripts/battery
interval=60
markup=pango

